<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/pageStyle">
    <com.lib.commui.nova.widget.TitleView
        android:id="@+id/title_view"
        style="@style/titleViewStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:titleText="@string/password"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_view"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="16dp"
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="类型"/>
                <TextView
                    android:id="@+id/tv_type"
                    style="@style/pwdInfoText"
                    android:text="新类型"/>
            </LinearLayout>
            <LinearLayout
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="名称"/>
                <EditText
                    android:id="@+id/et_name"
                    style="@style/pwdInfoText"
                    android:text="中国银行"/>
            </LinearLayout>
            <LinearLayout
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="文件夹"/>
                <EditText
                    android:id="@+id/et_folder"
                    style="@style/pwdInfoText"
                    android:text="银行卡"/>
            </LinearLayout>
            <LinearLayout
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="账号"/>
                <EditText
                    android:id="@+id/et_account"
                    style="@style/pwdInfoText"
                    android:text="1561512"/>
            </LinearLayout>
            <LinearLayout
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="密码"/>
                <EditText
                    android:id="@+id/et_password"
                    style="@style/pwdInfoText"
                    android:text="1561512"/>
            </LinearLayout>
            <LinearLayout
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="信用卡编号"/>
                <EditText
                    android:id="@+id/et_bank_number"
                    style="@style/pwdInfoText"
                    android:text="287"/>
            </LinearLayout>
            <LinearLayout
                style="@style/pwdItemVew">
                <TextView
                    style="@style/pwdTitleText"
                    android:text="信用日期"/>
                <EditText
                    android:id="@+id/et_bank_date"
                    style="@style/pwdInfoText"
                    android:text="0623"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="保存"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/dialog_btn_confirm"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
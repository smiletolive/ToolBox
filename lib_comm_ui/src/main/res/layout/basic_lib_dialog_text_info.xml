<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/basicLibDialogMargin"
    android:layout_marginRight="@dimen/basicLibDialogMargin"
    android:background="@drawable/basic_lib_dialog_bg">

    <TextView
        android:id="@+id/tv_title"
        style="@style/basicLibDialogTitleStyle"
        app:layout_constraintLeft_toLeftOf="@id/tv_message"
        app:layout_constraintRight_toRightOf="@id/tv_message"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="@dimen/basicLibDialogContentWidth"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/basicLibDialogPadding"
        android:gravity="center|top"
        android:textColor="#444444"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="@dimen/basicLibDialogPadding"
        app:layout_constraintTop_toBottomOf="@id/tv_message"
        app:layout_constraintLeft_toLeftOf="@id/tv_message"
        app:layout_constraintRight_toRightOf="@id/tv_message"/>


    <Button
        android:id="@+id/btn_cancel"
        style="@style/basicLibDialogButtonStyle"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_confirm"/>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/basicLibDialogButtonStyle"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/horizontal_line"
        app:layout_constraintLeft_toRightOf="@id/btn_cancel"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
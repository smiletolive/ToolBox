<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/basicLibDialogMargin"
    android:layout_marginRight="@dimen/basicLibDialogMargin"
    android:background="@drawable/basic_lib_dialog_bg">

    <TextView
        android:id="@+id/tv_title"
        style="@style/basicLibDialogTitleStyle"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/et_content"
        app:layout_constraintRight_toRightOf="@id/et_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_content"
        android:layout_width="@dimen/basicLibDialogContentWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="@dimen/basicLibDialogPadding"
        android:layout_marginRight="@dimen/basicLibDialogPadding"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/basic_lib_input_edit_bg_normal"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/basic_lib_edit_cursor"
        android:textColor="#282729"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>


    <Button
        android:id="@+id/btn_cancel"
        style="@style/basicLibDialogButtonStyle"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_confirm"/>

    <Button
        android:id="@+id/btn_confirm"
        style="@style/basicLibDialogButtonStyle"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/et_content"
        app:layout_constraintLeft_toRightOf="@id/btn_cancel"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/basicLibDialogMargin"
    android:layout_marginRight="@dimen/basicLibDialogMargin"
    android:background="@drawable/basic_lib_dialog_bg">

    <TextView
        android:id="@+id/tv_title"
        style="@style/basicLibDialogTitleStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/line_top_split"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="@dimen/basicLibDialogPadding"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/basicLibDialogPadding"
        app:layout_constraintTop_toBottomOf="@id/line_top_split"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:id="@+id/line_bottom_split"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="@dimen/basicLibDialogPadding"
        app:layout_constraintTop_toBottomOf="@id/radio_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btn_cancel"
        style="@style/basicLibDialogButtonStyle"
        app:layout_constraintTop_toBottomOf="@id/line_bottom_split"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
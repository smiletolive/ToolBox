<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:visibility="gone"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/dialog_btn_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/map_line"/>
    <CheckBox
        android:id="@+id/cb_map"
        style="@style/radioMapStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_top"/>
    <TextView
        android:id="@+id/tv_example"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/map_title_box"
        android:textSize="15sp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:text="点击体验"
        app:layout_constraintBottom_toBottomOf="@id/cb_map"
        app:layout_constraintTop_toTopOf="@id/cb_map"
        app:layout_constraintRight_toRightOf="parent"/>
    <View style="@style/switchMapLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_map"/>
    <View
        android:id="@+id/v_bottom"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cb_map"
        android:background="@color/lib_ling_bg"/>
</androidx.constraintlayout.widget.ConstraintLayout>
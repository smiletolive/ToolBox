<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CustomDialog" parent="android:style/Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- dialog样式 -->
    <style name="basicLibDialogNoMask" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">true</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- dialog页面背景带蒙版样式 -->
    <style name="basicLibDialogMask" parent="basicLibDialogNoMask">
        <item name="android:windowBackground">#66000000</item> <!--窗口背景色-->
        <item name="android:backgroundDimEnabled">true</item> <!--背景是否模糊显示-->
    </style>

    <!--dialog顶部进出动画 -->
    <style name="basicLibTopDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/basic_lib_anim_dialog_top_in</item>
        <item name="android:windowExitAnimation">@anim/basic_lib_anim_dialog_top_out</item>
    </style>


    <!--dialog底部进出动画 -->
    <style name="basicLibBottomDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/basic_lib_anim_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/basic_lib_anim_dialog_bottom_out</item>
    </style>

    <!-- 自定义弹出框动画 -->
    <style name="basicLibCenterDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/basic_lib_anim_dialog_show</item>
        <!-- 进入时的动画 -->
        <item name="android:windowExitAnimation">@anim/basic_lib_anim_dialog_dismiss</item>
        <!-- 退出时的动画 -->
    </style>

    <!-- dialog按钮样式 -->
    <style name="basicLibDialogButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="basicLibDialogTitleStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/basicLibDialogPadding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/basic_lib_color_title</item>
        <item name="android:textSize">@dimen/basicLibDialogTitleSize</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="basicLibDialogCloseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:src">@drawable/basic_lib_ic_close</item>
    </style>

    <style name="basicLibDialogSimpleListItemTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="baseMapBtnStyle">
        <item name="android:layout_width">46dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/ic_btn_map_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">9sp</item>
    </style>
<!--    图层选择item样式-->
    <style name="radioMapStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:button">@drawable/cb_selector</item>
        <item name="android:textColor">#444444</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="switchMapLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@drawable/line_left_margins</item>
    </style>

    <style name="statusBarViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_ffffff</item>
    </style>

    <style name="titleViewStyle" parent="noBackTitleViewStyle">
        <item name="leftViewIcon">@drawable/lib_ic_back</item>
    </style>

    <style name="noBackTitleViewStyle" xmlns:tools="http://schemas.android.com/apk/res-auto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="titleViewBg">@drawable/basic_lib_title_bg</item>
        <item name="titleTextColor">#444444</item>
        <item name="titleTextSize">18sp</item>
        <item name="titleViewRightTextColor">#888888</item>
        <item name="titleViewRightTextSize">14sp</item>
    </style>

    <style name="noBackTitleViewBlueBackgroundStyle" parent="noBackTitleViewStyle">
        <item name="titleViewBg">@drawable/basic_lib_title_bg_blue</item>
        <item name="titleTextColor">#FFFFFF</item>
    </style>

    <style name="pageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#FBFAFA</item>
    </style>
    <style name="titleViewLineStyle" parent="noBackTitleViewStyle">
        <item name="leftViewIcon">@drawable/lib_ic_back</item>
        <item name="titleViewBg">@drawable/basic_lib_title_line_bg</item>
    </style>
</resources>
